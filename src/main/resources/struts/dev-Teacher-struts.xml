<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="devTeacher" namespace="/dev" extends="struts-default">
		
		<result-types>
			 <result-type name="json" class="org.apache.struts2.json.JSONResult" />
		</result-types>
		<action name="loadTeacherMgr">
			<result>dev-Teacher-management.jsp</result>
		</action>
		<action name="saveOrUpdateTeacher" class="TeacherAction" method="saveOrUpdateTeacher">
			<result name="input">
				dev-Teacher-management.jsp
			</result>
			<result name="success" type="json">
				<param name="root">response</param>
			</result>
			<result name="error" type="json">
				<param name="root">response</param>
			</result>
		</action>
		<action name="loadTeachers" class="TeacherAction" method="loadTeachers">
			<result name="success" type="json">
				<param name="root">response</param>
			</result>
			<result name="error" type="json">
				<param name="root">response</param>
			</result>
		</action>
	</package>
	
</struts>